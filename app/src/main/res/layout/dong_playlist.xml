<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
 <ImageView
     android:scaleType="fitXY"
     android:id="@+id/imgplaylist"
     android:layout_marginTop="5dp"
     android:layout_marginLeft="8dp"
     android:layout_marginRight="8dp"
     android:layout_width="match_parent"
     android:layout_height="150dp"/>
    <View
        android:background="@drawable/custom_banner"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>
    <ImageView
        android:id="@+id/imgiconlist"
        android:layout_alignBottom="@+id/imgplaylist"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:elevation="6dp"
        android:scaleType="fitXY"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <TextView
        android:id="@+id/txtlist"
        android:text="Nhung bai hit cua"
        android:layout_alignBottom="@+id/imgplaylist"
        android:layout_toRightOf="@+id/imgiconlist"
        android:layout_marginLeft="15dp"
        android:maxLines="1"
        android:textStyle="bold"
        android:textColor="#ffff"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="50dp"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>