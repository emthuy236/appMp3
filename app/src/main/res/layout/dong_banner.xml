<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/imgbanner"
        android:layout_width="match_parent"
        android:layout_height="230dp"/>
    <View
        android:background="@drawable/custom_banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_alignBottom="@id/imgbanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="2dp"
            android:id="@+id/imghinhban"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
        <TextView
            android:id="@+id/txttitle"
            android:textStyle="bold"
            android:text="Lo yeu mat roi"
            android:textColor="#ffffff"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:layout_alignTop="@id/imghinhban"
            android:layout_toRightOf="@id/imghinhban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_below="@id/txttitle"
            android:layout_toRightOf="@id/imghinhban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtnoidung"
                android:textColor="#ffffff"
                android:text="Những bài hát hay nhất"
                android:maxLines="2"
                android:textSize="13sp"
                android:layout_marginRight="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>